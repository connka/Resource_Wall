<header>
  <% include partials/_header %>
    <title>"
      <%= currentUser %> Profile Page"</title>
</header>

<body class="userProfile">
  <h1>Edit Profile: <%= currentUser % </h1>
  <form method="POST" action="/api/users/<%= user_id%>/profile" class="registration_box">
  <div id="username">Username:
    <div class="username">
      <label for="username"></label>
      <input class="form-control z-depth-1" id="username" rows="1"  name = "name"
           value = <%= currentUser%>></input>
    </div>
  </div>
  <div id="username">Email:
    <div class="email">
      <label for="email"></label>
      <input class="form-control z-depth-1" id="email" rows="1" name="email"  type="email"></input>
    </div>
  </div>
  </div>
  <div id="username">Location:
    <div class="location">
      <label for="location"></label>
      <input class="form-control z-depth-1" id="location" name="location" rows="1"></input>
    </div>
  </div>
  <div id="intrests">Interests:
    <div class="interests">
      <label for="interests"></label>
      <input class="form-control z-depth-1" id="Interest1" name = "interest1" rows="1" ></input>
      <input class="form-control z-depth-1" id="Interest2" name = "interest2" rows="1" ></input>
      <input class="form-control z-depth-1" id="Interest3" name = "interest3" rows="1"> </input>
    </div> 
    <input type='submit' class="form-control z-depth-1" id="location" rows="1"/>
  </div>
  </form>
</body>
